<section class="py-5 text-center container">
  <div class="row py-lg-1">
    <div class="col-lg-4 col-md-8 mx-auto">
      <h1 class="fw-light">Places</h1>
    </div>
  </div>
</section>

<div class="album py-5 bg-light">
  <div class="container">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-5 g-3">
      <% Place.all.each do |place| %>
        <div class="col">
          <div class="card shadow-sm">
            <div class="card-body">
              <p class="card-text">Place <%= place.number %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <% if place.free? %>
                    <a class="btn btn-primary btn-sm" href="/book?place=<%= place.number %>">Reserve</a>
                  <% else %>
                    <button type="button" class="btn btn-secondary btn-sm" disabled>Reserve</button>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>